.PaddingBox
.Accountedit
  .Accountedit__Field
    = form_for(current_user) do |f|
      %table.table
        %tbody
          %tr
            %th
              = f.label :アカウント名
            %td
              = f.text_field :nickname, autofocus: true
          %tr
            %th
              = f.label :メールアドレス
            %td
              = f.email_field :email, :size=>"60", placeholder:"例）abc@volcano.ne.jp"
          %tr
            %th
              = f.label :氏名
            %td
              = f.email_field :family_name, placeholder:"例）渋谷"
              = f.email_field :first_name, placeholder:"例）太郎"
              （全角）
          %tr
            %th
              = f.label :フリガナ
            %td
              = f.email_field :family_name_kana, placeholder:"例）シブヤ"
              = f.email_field :first_name_kana, placeholder:"例）タロウ"
              （全角カナ）
          %tr
            %th
              = f.label :生年月日
            %td
              = f.date_select(:birthday, start_year: 1930, end_year: (Time.now.year), default: Date.new(1930, 1, 1), date_separator: '/')
          %tr
            %th
              = f.label :郵便番号
            %td
              = f.email_field :postal_code, placeholder:"例）1235678"
              （半角数字　ハイフン入力不要）
          %tr
            %th
              = f.label :都道府県
            %td
              = f.email_field :region, :size=>"30", placeholder:"例）東京都"
          %tr
            %th
              = f.label :市区町村
            %td
              = f.email_field :street, :size=>"60", placeholder:"例）港区麻布１−２−３タワーマンション２０１"
          %tr
            %th
              = f.label :連絡先
            %td
              = f.email_field :phone, :size=>"30", placeholder:"例）09012345678"
              （半角数字　ハイフン入力不要）

      = f.submit "Update", class: 'Button UserButton'
