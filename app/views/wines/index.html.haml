.PaddingBox
.WineHeader
  .SearchField
    %h1 Wines#index
    %p Find me in app/views/wines/index.html.haml
.PaddingBox2
.WineBody
  .WineSide
    a
    %br
    a
    %br
    a
    %br
    a
    %br
  .WineMainField
    .Products
      - @wines.each do |wine|
        .Products__Box
          .Products__Box__left
            = link_to wine_path(wine.id), class: 'no-underline' do
              = image_tag wine.productimages[0].image_url, class: 'Products__Box__left--image'
          .Products__Box__center
            .Products__Box__center--name
              = link_to wine_path(wine.id), class: 'no-underline' do
                = wine.name
            .Products__Box__center--info
              = wine.name_spell
            .Products__Box__center--info
              = "生産者：#{wine.producer}"
            .Products__Box__center--info
              = "タイプ：#{wine.wine_type.group}"
            .Products__Box__center--info
              = "生産地：#{wine.domaine.name} / #{wine.chator}"
            .Products__Box__center--info
              = "説明：#{wine.title}"
          %hr
          .Products__Box__right
            = wine.price
        %hr
