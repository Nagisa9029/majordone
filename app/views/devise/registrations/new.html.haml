= javascript_include_tag 'particles.min'
= javascript_include_tag 'setting'

.AccountField#particles-js
  .AccountPage.Regiistration
    .Input_Field
      .AccountPage__title
        %h2 Create Account
      .AccountPage__form
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .FormField
            .FormField__label--normal
              = f.label :nickname, "ACOUNT NAME"
            .FormField__input--normal
              = f.text_field :nickname, autofocus: true
          .FormField
            .FormField__label--normal
              = f.label :email, "E-MAIL"
            .FormField__input--normal
              = f.email_field :email
          .FormField
            .FormField__label--normal
              = f.label :password, "PASSWORD"
              %i (英数字8文字以上)
            .FormField__input--normal
              = f.password_field :password, autocomplete: "off"
          .FormField
            .FormField__label--normal
              = f.label :password_confirmation, "PASSWORD"
              %i (確認用)
            .FormField__input--normal
              = f.password_field :password_confirmation, autocomplete: "off"
          .actions 
            = f.submit "Create Account", class: 'Button UserButton'
        = render "devise/shared/links"